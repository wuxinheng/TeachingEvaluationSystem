@page "/question/index"
@using TeachingEvaluationSystem.Data;
@inject QuestionBankService QuestionBankService

<img @onclick="AddQuestions" src="https://tdesign.gtimg.com/demo/demo-image-1.png" alt="" class="t-image t-image--fit-cover t-image--position-center" style="width:40px;height:40px;position:fixed;right:2vw;top:50vh;z-index:100">
<form>
    @foreach (var item in Questions)
    {

        <fieldset>
            <legend style="display: flex;">@item.Sequence.&nbsp;<input class="form-control" type="text" @bind="@item.Tile" required></legend>
            <div class="mb-3">
                @foreach (var option in @item.OptionBanks)
                {
                    <div class="row g-3" style="display: flex;align-items: center;">
                        <div class="col-auto" style="margin:16px;">
                            <input type="text" class="form-control" placeholder="请输入填写选项" @bind="@option.Content" required>
                        </div>
                        <div class="col-auto" style="margin:16px;">
                            <select class="form-select" aria-label="Default select example" required @bind="@option.Weight">
                                <option value="0">0.0</option>
                                <option value="0.1">0.1</option>
                                <option value="0.2">0.2</option>
                                <option value="0.3">0.3</option>
                                <option value="0.4">0.4</option>
                                <option value="0.5">0.5</option>
                                <option value="0.6">0.6</option>
                                <option value="0.7">0.7</option>
                                <option value="0.8">0.8</option>
                                <option value="0.9">0.9</option>
                                <option value="1">1.0</option>
                            </select>
                        </div>
                    </div>
                }
            </div>
        </fieldset>

    }
    <button type="submit" style="width:40px;height:40px;position:fixed;right:2vw;top:65vh;z-index:100;border: none;padding: 0;">
        <img src="https://tdesign.gtimg.com/demo/demo-image-1.png" @onclick="Save" alt="" class="t-image t-image--fit-cover t-image--position-center">
    </button>

</form>

@code {

    public List<DB.Entitys.QuestionBank> Questions { get; set; } = new List<DB.Entitys.QuestionBank>();
    protected override void OnInitialized()
    {
        Questions = new List<DB.Entitys.QuestionBank>();
        DB.Entitys.QuestionBank question = new DB.Entitys.QuestionBank()
            {
                Tile = "",
                Sequence = Questions.Count + 1,
                OptionBanks = new List<DB.Entitys.OptionBank>()
            {
                new DB.Entitys.OptionBank(){ Content=""},
                new DB.Entitys.OptionBank(){ Content=""},
                new DB.Entitys.OptionBank(){ Content=""},
                new DB.Entitys.OptionBank(){ Content=""},
            }
            };
        Questions.Add(question);

    }

    public async Task AddQuestions()
    {
        DB.Entitys.QuestionBank question = new DB.Entitys.QuestionBank()
            {
                Tile = "",
                Sequence = Questions.Count + 1,
                OptionBanks = new List<DB.Entitys.OptionBank>()
            {
                new DB.Entitys.OptionBank(){ Content=""},
                new DB.Entitys.OptionBank(){ Content=""},
                new DB.Entitys.OptionBank(){ Content=""},
                new DB.Entitys.OptionBank(){ Content=""},
            }
            };
        Questions.Add(question);
        await OnInitializedAsync();
    }

    public async Task Save()
    {
        await QuestionBankService.Save(Questions);
    }
}