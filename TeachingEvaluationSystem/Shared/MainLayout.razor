@using TeachingEvaluationSystem.Data;
@inherits LayoutComponentBase
@inject GlobalInfo GlobalInfo
<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <TLink OnClick="e=>refCompleteDialog?.Activate()">
                @{
                    if (GlobalInfo.User == null)
                    {
                        var s = "登录";
                        @s
                    }
                    else
                    {
                        @GlobalInfo.User.Name
                    }
                }
            </TLink>
            <a href="https://github.com/wuxinheng/TeachingEvaluationSystem" target="_blank">github</a>
        </div>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
